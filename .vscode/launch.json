  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "development",
        // "NODE_ENV": "test",
      },
      "args": [
        // "--bail",
        "--timeout", "999999",
        "--colors",
        "--exit",
        "${workspaceFolder}/test/index.js",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**/*.js",
      ],
    },

    // {
    //   "type": "node",
